{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": "off",
    "strict": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "prefer-destructuring": "off",
    "func-names": "off",
    "class-methods-use-this": "off"
  }
}
